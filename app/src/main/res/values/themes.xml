<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeAppliancesEssentials" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darker_grey_3E3D3D</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/grey</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="editexttheme" parent="Widget.Design.TextInputLayout">
        <item name="fontFamily">@font/poppins</item>
        <item name="errorTextAppearance">@style/editexterror</item>
    </style>

    <style name="editexterror" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red_DF1B38</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttontheme" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:background">@drawable/button_bg_rounded_corner</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonthemeRed" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:background">@drawable/button_bg_rounded_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleTheme</item>
    </style>
    <style name="bottomSheetStyleTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>